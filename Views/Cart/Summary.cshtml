
@model BookStore.Domain.Entities.Cart
<div class="navbar-right">

    @Html.ActionLink("Checkout", "Index", "Cart",

    new { returnUrl = Request.Url.PathAndQuery },
   new { @class = "btn btn-success navbar-btn glyphicon glyphicon-shopping-cart  hvr-grow" }

    )

</div>

<div class="navbar-text navbar-right">
    <b>Your Cart:</b>
    @Model.Lines.Sum(x => x.Quantity) Book(s),
    @Model.ComputTotalvalue().ToString("c")
</div>
